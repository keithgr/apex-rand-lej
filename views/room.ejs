<!-- This is a static file -->
<!-- served from your routes in server.js -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- crack the cache -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0"/>
    
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="A meta generator for Apex Legends" />

    <title>Rand Lej - <%= roomId %></title>

    <!-- import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />

    <!-- import the webpage's client-side javascript file -->
    <script src="/client.js" defer></script>
  </head>

  <body id="bod" roomId="<%= roomId %>">
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
    <header class="padded">
      <a href="/">
        <h1 style="color:#373fff;font-weight:bold;">
          Rand Lej
        </h1> 
      </a>
    </header>
    
    <div id="slotmachine">      
      <% let bannerColors = ['orange', 'lightblue', 'lightgreen'] %>
      <% let defaultPlayerNames = ['player_won', 'player_too', 'player_tree'] %>
      <% for (let s = 0; s < 3; s++) { %>
        <div class="slot" id="slot<%= s %>">
          <div class="card" width="115" height="250" style="border: solid thick <%= bannerColors[s] %>; box-shadow: 0 0 10px <%= bannerColors[s] %>;">
            <div class="kard legend-name">
              <strong>Dummie</strong>
            </div>
            <img class="legend-pic" src="https://cdn.glitch.global/5fba9e63-a0f9-4df4-8cdc-134ede9a4405/dummie.png?v=1645584352373" height="180">
          </div>
          <div class="player-name-container">
            <input type="text" class="player-name" value="✏️ <%= defaultPlayerNames[s] %>" onClick="this.select()">
          </div>
        </div>
      <% } %>
    </div>
    <div id="spin-container" class="padded">
      <button id="spin"><strong id="spinText">Spin</strong></button>
    </div>
    
    <div class="padded">
      <hr>
      <h3>Toggle Legends</h3>
    </div>
    <div id="legend-toggle">
      <% for (let p = 0; p < 3; p++) { %>
        <div class="toggle-column">
          <h4>Player <%= p+1 %></h4>
          <%  for(let i = 0; i < legends.length; i++) { %>
            <div class="toggle-option">
              <input type="checkbox" id="p<%= p %>l<%= i %>" name="p<%= p %>l<%= i %>" value=1 checked>
              <label for="p<%= p %>l<%= i %>"><%= legends[i] %></label>
            </div>
          <%  } %>
        </div>        
      <% } %>
    </div>
    <div id="loadsave-container" class="padded">
      <button id="load"><strong id="loadText">Load</strong></button>
      <button id="save"><strong id="saveText">Save</strong></button>
    </div>
    <p id="save-message"></p>
              
  </body>
</html>
